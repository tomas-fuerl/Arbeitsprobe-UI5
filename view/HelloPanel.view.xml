<mvc:View
	controllerName="HTS.IT.FIAE.ITQ.controller.HelloPanel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Panel
		headerText="{i18n>helloPanelTitle}"
		class="sapUiResponsiveMargin"
		width="auto">
		<content>
            <VBox>
                <Input
				value="{/recipient/zahl1}"
				valueLiveUpdate="true"
				width="60%"/>
                <Input
				value="{/recipient/zahl2}"
				valueLiveUpdate="true"
				width="60%"/>
            </VBox>
			<Button
				text="{i18n>showHelloButtonText}"
				press=".onShowHello"
				class="myCustomButton"/>
		</content>
	</Panel>
</mvc:View>
